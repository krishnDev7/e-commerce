{
    "name": "e-commerce-monorepo",
    "private": true,
    "version": "0.1.0",
    "packageManager": "npm@10.7.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev --parallel",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "turbo run format",
        "prisma:generate": "turbo run prisma:generate",
        "prisma:migrate": "turbo run prisma:migrate",
        "prisma:studio": "turbo run prisma:studio",
        "postinstall": "npm run prisma:generate || true"
    },
    "devDependencies": {
        "prettier": "^3.2.5",
        "turbo": "^2.0.6",
        "typescript": "^5.4.0"
    },
    "dependencies": {
        "@supabase/ssr": "^0.7.0"
    }
}
